{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"outputs": ["dist/**"]
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"format": {
			"cache": false
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"lint:fix": {
			"cache": false
		}
	}
}
