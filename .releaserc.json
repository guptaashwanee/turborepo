{
	"branches": [
		"main",
		"master",
		{
			"name": "develop",
			"prerelease": "beta"
		},
		{
			"name": "release",
			"prerelease": "rc"
		}
	],
	"extends": ["semantic-release-monorepo"],
	"plugins": [
		[
			"semantic-release-gitmoji",
			{
				"releaseRules": {
					"major": [":boom:"],
					"minor": [":sparkles:", ":tada:", ":white_check_mark:"],
					"patch": [
						":bug:",
						":ambulance:",
						":lock:",
						":zap:",
						":goal_net:",
						":alien:",
						":wheelchair:",
						":speech_balloon:",
						":mag:",
						":apple:",
						":penguin:",
						":checkered_flag:",
						":robot:",
						":green_apple:",
						":iphone:",
						":lipstick:",
						":memo:",
						":package:",
						":arrow_up:",
						":arrow_down:",
						":pushpin:",
						":construction_worker:",
						":chart_with_upwards_trend:",
						":recycle:",
						":heavy_plus_sign:",
						":heavy_minus_sign:",
						":wrench:",
						":hammer:",
						":globe_with_meridians:",
						":pencil2:",
						":poop:",
						":rewind:",
						":twisted_rightwards_arrows:",
						":truck:",
						":loud_sound:",
						":mute:",
						":busts_in_silhouette:",
						":children_crossing:",
						":building_construction:",
						":see_no_evil:",
						":camera_flash:",
						":alembic:",
						":seedling:",
						":triangular_flag_on_post:",
						":dizzy:",
						":wastebasket:",
						":passport_control:",
						":adhesive_bandage:",
						":monocle_face:",
						":coffin:",
						":test_tube:",
						":necktie:",
						":stethoscope:",
						":bricks:"
					]
				}
			}
		],
		[
			"@semantic-release/changelog",
			{
				"changelogFile": "CHANGELOG.md",
				"changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file."
			}
		],
		[
			"@semantic-release/github",
			{
				"successComment": false,
				"failComment": false,
				"assets": [
					{
						"path": "CHANGELOG.md",
						"label": "Changelog"
					}
				]
			}
		]
	]
}
