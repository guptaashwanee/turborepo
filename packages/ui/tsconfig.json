{
	"extends": "@anscer/typescript-config/react-library.json",
	"compilerOptions": {
		"baseUrl": ".",
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"moduleResolution": "Bundler",
		"module": "ESNext",
		"jsx": "react-jsx",
		"lib": ["es2022", "DOM", "DOM.Iterable"],
		"paths": {
			"@anscer/ui/*": ["./src/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
