{
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"editor.codeActionsOnSave": {
		"quickfix.biome": "explicit",
		"source.organizeImports.biome": "explicit"
	},
	"editor.tabSize": 2,
	"editor.defaultFormatter": "biomejs.biome",
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"emmet.includeLanguages": {
		"typescript": "typescriptreact",
		"typescriptreact": "javascriptreact"
	},
	"emmet.syntaxProfiles": {
		"typescriptreact": "jsx",
		"typescript": "jsx"
	},
	"emmet.triggerExpansionOnTab": true,
	"emmet.showExpandedAbbreviation": "always",
	"prettier.enable": false,
	"typescript.tsdk": "node_modules/typescript/lib",
	"tailwindCSS.experimental.configFile": "packages/design-system/styles/globals.css",
	"workbench.colorTheme": "SynthWave '84",
	"workbench.iconTheme": "material-icon-theme",
	"files.exclude": {
		"**/.git": true,
		"**/.tanstack": true,
		"**/.turbo": true
	},
	"editor.fontFamily": "JetBrains Mono",
	"editor.codeLensFontFamily": "JetBrains Mono",
	"editor.inlayHints.fontFamily": "JetBrains Mono",
	"terminal.integrated.fontFamily": "JetBrains Mono",
	"notebook.markup.fontFamily": "JetBrains Mono",
	"notebook.output.fontFamily": "JetBrains Mono",
	"chat.editor.fontFamily": "JetBrains Mono",
	"markdown.preview.fontFamily": "JetBrains Mono",
	"terminal.integrated.fontLigatures.enabled": true,
	"files.watcherExclude": {
		"**/routeTree.gen.ts": true
	},
	"search.exclude": {
		"**/routeTree.gen.ts": true
	},
	"files.readonlyInclude": {
		"**/routeTree.gen.ts": true
	}
}
