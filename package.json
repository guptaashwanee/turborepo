{
	"name": "turborepo",
	"version": "1.0.0",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"config": {
		"commitizen": {
			"path": "cz-gitmoji-adapter"
		}
	},
	"scripts": {
		"format": "turbo run format",
		"format:root": "biome format --write .",
		"lint": "turbo run lint",
		"lint:root": "biome check .",
		"lint:fix": "turbo run lint:fix",
		"lint:fix:root": "biome check --fix .",
		"commit": "bunx cz",
		"dev": "turbo run dev --parallel",
		"build": "turbo run build",
		"test": "turbo run test",
		"typecheck": "turbo run typecheck",
		"release": "semantic-release",
		"release:dry": "semantic-release --dry-run",
		"release:packages": "node scripts/release-packages.mjs"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.1",
		"@commitlint/cli": "^19.8.1",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/github": "^11.0.3",
		"@types/bun": "latest",
		"commitizen": "^4.3.1",
		"commitlint-config-gitmoji": "^2.3.1",
		"conventional-changelog-gitmoji-config": "^1.5.2",
		"cz-gitmoji-adapter": "^2.0.0",
		"inquirer": "^12.7.0",
		"lefthook": "^1.12.2",
		"semantic-release": "^24.2.7",
		"semantic-release-gitmoji": "^1.6.8",
		"semantic-release-monorepo": "^8.0.2",
		"turbo": "^2.5.4"
	},
	"peerDependencies": {
		"typescript": "^5.8.3"
	},
	"packageManager": "bun@1.2.18",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalogs": {
			"client": {
				"react": "^19.1.0",
				"react-dom": "^19.1.0",
				"@types/react": "^19.1.5",
				"@types/react-dom": "^19.1.5"
			}
		}
	}
}
